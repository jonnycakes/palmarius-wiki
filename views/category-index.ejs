<!DOCTYPE html>
<html>
  <head>
    <%- include ./partials/head.ejs %>
  </head>
  <body>

    <!-- Start side-nav -->
    <div id="slide-out" class="side-nav fixed">
      <ul>
        <%- include ./partials/logo.ejs %>


        <li><a href="/update-history" class="waves-effect waves-light btn blue lighten-1">Update History</a></li>

      </ul>
      <ul class="foot">
        <li><a href="/new" class="waves-effect waves-light btn green lighten-1">New Article</a></li>
              </ul>
    </div>
    <!-- End side-nav -->

    <header class="z-depth-1">

      <!-- breadcrumb -->
      <nav>
        <div class="nav-wrapper">
          <div class="col s12">
            <a class="breadcrumb">Home</a>
            <a class="breadcrumb">Articles</a>
          </div>
        </div>
      </nav>
      <!-- End breadcrumb -->

      <span class="hamburger-menu">
        <a href="#" data-activates="slide-out" class="button-collapse"><i class="large material-icons icon-red lighten-5">menu</i></a>
      </span>
        <h3> Categories</h3>

    </header>



      <div id="content-wrapper">



        <div id="main-content">
          <h3> Category List</h3>
            <div class="collection ">
              <% categories.forEach( category => { %>
                <a href="/<%= category.id %>" class="collection-item red-text text-lighten-2"><%= category.description %></a>
              <% }) %>
            </div>
        </div>
      </div>





  </body>
</html>
